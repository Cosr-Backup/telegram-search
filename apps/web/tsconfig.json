{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@tg-search/core": ["../../packages/core/src"],
      "@tg-search/core/types": ["../../packages/core/src/types/index.ts"],
      "@tg-search/common": ["../../packages/common/src"],
      "@tg-search/client": ["../../packages/client/src"],
      "@tg-search/server/types": ["../../apps/server/src/types.ts"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client",
      "vite-plugin-vue-layouts/client",
      "vite-plugin-pwa/client",
      "unplugin-vue-macros/macros-global",
      "unplugin-vue-router/client",
      "unplugin-info/client"
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
